<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:padding="8dp">
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/data_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/level_2" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6.71"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/data_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Level 2"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/data_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="29 Mar 2017, 08:47"
            android:textColor="@color/colorItemTime"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/data_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/data_level"
            android:layout_marginTop="5dp"
            android:text="Lab FTTH"
            android:textSize="16dp"></TextView>
    </RelativeLayout>
</LinearLayout>