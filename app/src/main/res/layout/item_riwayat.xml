<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    android:padding="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:id="@+id/relativeLayout">
            <ImageView
                android:id="@+id/data_image"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/level_2" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/relativeLayout"
            android:layout_toEndOf="@+id/relativeLayout"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp">

            <TextView
                android:id="@+id/data_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Level 2"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/glukosa_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Glukosa 130 (mg/gl)"
                android:layout_marginTop="2dp"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_below="@+id/data_level"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/data_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="29 Mar 2017, 08:47"
                android:textColor="@color/colorItemTime"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/data_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lab FTTH"
                android:textSize="14dp"
                android:layout_marginTop="2dp"
                android:layout_below="@id/glukosa_level"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>